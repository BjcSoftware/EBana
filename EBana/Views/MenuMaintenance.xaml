<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="EBana.Views.MenuMaintenance" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="MenuMaintenance">
	<Grid
		Style="{StaticResource ContentRoot}"
		VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBlock
			Text="Menu de maintenance"
			TextAlignment="Center"
			FontSize="18"
			Grid.Row="0"
			Margin="0 15" />
		<Button
			Content="Mettre à jour"
			Grid.Row="1"
			Height="40"
			Margin="10"
			Name="button1"
			Click="cmdUpdate_click" />
		<Button
			x:Name="cmdNewPassword"
			Content="Définir un nouveau mot de passe"
			Grid.Row="2"
			Height="40"
			Margin="10"
			Click="cmdNewPassword_Click" />
		<Button
			Content="Gérer les photos d'articles"
			Grid.Row="3"
			Height="40"
			Margin="10"
			Name="cmdPhotos"
			Click="cmdPhotos_Click" />
	</Grid>
</Page>