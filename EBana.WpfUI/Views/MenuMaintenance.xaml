    <Grid
		Style="{StaticResource ContentRoot}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top">
            <TextBlock
			    Text="Menu de maintenance"
			    TextAlignment="Center"
			    FontSize="25"
			    Grid.Row="0"
                Style="{StaticResource Title}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <mui:ModernButton
                Command="{Binding GoToArticlesUpdaterCommand}"
                ToolTip="Accéder à l'interface de mise à jour du catalogue"
                HorizontalAlignment="Center"
			    Name="cmdUpdate"
                IconData="{StaticResource UpdateIconData}"
                EllipseDiameter="100" EllipseStrokeThickness="3"
                IconWidth="66" IconHeight="66"/>
            <TextBlock 
                HorizontalAlignment="Center"
                Text="Mise à jour" FontSize="15" Margin="0 10 0 0"
                Style="{StaticResource Title}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" VerticalAlignment="Top">
            <mui:ModernButton
                Command="{Binding GoToPictureManagerCommand}"
                ToolTip="Accéder à l'interface de gestion des photos d'articles"
                HorizontalAlignment="Center"
			    Name="cmdPhotos"
                IconData="{StaticResource PicturesIconData}"
                EllipseDiameter="100" EllipseStrokeThickness="3"
                IconWidth="66" IconHeight="66"/>
            <TextBlock 
                HorizontalAlignment="Center"
                Text="Photos d'articles" FontSize="15" Margin="0 10 0 0"
                Style="{StaticResource Title}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" VerticalAlignment="Top">
            <mui:ModernButton
                Command="{Binding GoToPasswordUpdaterCommand}"
                ToolTip="Accéder à l'interface de sécurité"
                HorizontalAlignment="Center"
			    Name="cmdConsulter"
                IconData="{StaticResource SecurityIconData}"
                EllipseDiameter="100" EllipseStrokeThickness="3"
                IconWidth="66" IconHeight="66"/>
            <TextBlock 
                HorizontalAlignment="Center"
                Text="Sécurité" FontSize="15" Margin="0 10 0 0"
                Style="{StaticResource Title}"/>
        </StackPanel>
    </Grid>
